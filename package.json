{
  "name": "mtdeck",
  "description": "TweetDeckをスマホアプリのように使えるようにするUserScript",
  "author": "mkizka",
  "homepage": "https://github.com/mkizka/MTDeck",
  "version": "1.6.8",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production && web-ext build -s dist -o && web-ext lint -s dist",
    "format": "prettier -w src",
    "_dev:pack": "webpack --mode development --watch",
    "_dev:ext": "web-ext run -v -s dist -u tweetdeck.twitter.com",
    "dev:firefox": "webpack --mode development && concurrently --kill-others \"yarn _dev:pack\" \"yarn _dev:ext -p default\"",
    "dev:chrome": "webpack --mode development && concurrently --kill-others \"yarn _dev:pack\" \"yarn _dev:ext --target chromium\""
  },
  "dependencies": {
    "@types/chrome": "^0.0.124",
    "@types/hammerjs": "^2.0.36",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "hammerjs": "^2.0.8",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3",
    "web-ext": "^5.2.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-userscript": "^2.5.6"
  },
  "devDependencies": {
    "prettier": "^2.2.1"
  }
}
