{
  "name": "mtdeck",
  "description": "TweetDeckをスマホアプリのように使えるようにするUserScript",
  "author": "mkizka",
  "homepage": "https://github.com/mkizka/MTDeck",
  "version": "1.6.8",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "run-s _build:*",
    "_build:pack": "webpack --mode production",
    "_build:lint": "web-ext lint -s dist",
    "_build:ext": "web-ext build -s dist -o",
    "format": "prettier -w src",
    "_dev:pack": "webpack --mode development --watch",
    "_dev:ext": "web-ext run -v -s dist -u tweetdeck.twitter.com",
    "_dev:ext:firefox": "yarn _dev:ext -p default",
    "_dev:ext:chrome": "yarn _dev:ext --target chromium",
    "dev:firefox": "webpack --mode development && run-p _dev:pack _dev:ext:firefox",
    "dev:chrome": "webpack --mode development && run-p _dev:pack _dev:ext:chrome"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.127",
    "@types/hammerjs": "^2.0.36",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "hammerjs": "^2.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "web-ext": "^5.4.1",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-userscript": "^2.5.6"
  }
}
