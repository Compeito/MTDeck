{
  "name": "mtdeck",
  "description": "TweetDeckをスマホアプリのように使えるようにする",
  "author": "Compeito",
  "homepage": "https://github.com/Compeito/mtdeck",
  "version": "1.2.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production && web-ext build -s dist -o",
    "dev:pack": "webpack --mode development --watch",
    "dev:ext": "web-ext run -s dist -u tweetdeck.twitter.com -p default",
    "dev": "concurrently --kill-others \"yarn dev:ext\" \"yarn dev:pack\""
  },
  "devDependencies": {
    "@types/hammerjs": "^2.0.36",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "concurrently": "^4.1.2",
    "copy-webpack-plugin": "^5.0.4",
    "hammerjs": "^2.0.8",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.3",
    "web-ext": "^3.2.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-userscript": "^2.3.1"
  }
}
